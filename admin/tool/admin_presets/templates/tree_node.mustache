{{!
    @template tool_admin_presets/tree_node

    Template for nodes of the tree settings.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "id": "UsersNode",
        "level": 1,
        "label": "Course",
        "has_children": "has-children",
        "checked": true,
        "setting": true,
        "settingsnumber": 1,
        "padding": 20
    }
}}

<div id="{{{ id }}}" role="treeitem" aria-level="{{ level }}" class="{{ has_children }}" {{#setting}}data-setting="true"{{/setting}}>
    {{^setting}}
        <a class='collapse_link collapsed' data-toggle="collapse" href="#{{{ id }}}_group" aria-expanded="false" aria-owns="{{{ id }}}_group">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-9" style="padding-left: {{{padding}}}px;">
                        <span class="expanded-icon icon-no-margin p-1" title="{{#str}} collapse, core {{/str}}">
                            {{#pix}} t/expandedchevron, core {{/pix}}
                        </span>
                        <span class="collapsed-icon icon-no-margin p-1" title="{{#str}} expand, core {{/str}}">
                            <span class="dir-rtl-hide">
                                {{#pix}} t/collapsedchevron, core {{/pix}}
                            </span>
                            <span class="dir-ltr-hide">
                                {{#pix}} t/collapsedchevron_rtl, core {{/pix}}
                            </span>
                        </span>
                        <label class="p-1 {{#checked }}active{{/checked}}" for="{{{ id }}}_checkbox">
                            {{{ label }}}
                        </label>
                    </div>
                    <div class="col-2 text-center">
                        {{{settingsnumber}}}
                    </div>
                    <div class="col-1">
                        <input type="checkbox" id="{{{ id }}}_checkbox"
                               aria-checked="{{#checked}}true{{/checked}}{{^checked}}false{{/checked}}" {{#checked}}checked{{/checked}} name="{{{ id }}}"/>
                    </div>
                </div>
            </div>
        </a>
        <div class="collapse" id="{{{ id }}}_group" role="group"></div>
    {{/setting}}
    {{#setting}}
        <div class="d-flex w-100 setting_element">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-9">
                        <div class="container-fluid">
                            <div class="row">
                                {{{ label }}}
                            </div>
                        </div>
                    </div>
                    <div class="col-2"></div>
                    <div class="col-1">
                        <input type="checkbox" id="{{{ id }}}_checkbox"
                               aria-checked="{{#checked}}true{{/checked}}{{^checked}}false{{/checked}}" {{#checked}}checked{{/checked}} name="{{{ id }}}"/>
                    </div>
                </div>
            </div>
        </div>
    {{/setting}}
</div>

{{!
    @template tool_admin_presets/form-treesettings

    Template for form tree settings tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "treeId": "settings_tree_div",
        "icon": "<i class='icon fa fa-circle-o-notch fa-spin fa-fw' title='Loading' role='img' aria-label='Loading'></i>"
    }
}}

<div class="container-fluid tree_header">
    <div class="row">
        <div class="col-sm-9">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-8">Name</div>
                    <div class="col-sm-4 text-center">Value</div>
                </div>
            </div>
        </div>
        <div class="col-sm-2 text-center">
            Setting Number
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>
<div id="{{{treeId}}}" class="ygtv-checkbox preset_tree" role="tree">
    {{{icon}}}
</div>